{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/products",
      "UpstreamHttpMethod": [ "GET" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DelegatingHandlers": [ "TokenBlacklistHandler" ],
      "EnableRateLimiting": true
    },
    {
      "DownstreamPathTemplate": "/api/products/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/products/{id}",
      "UpstreamHttpMethod": [ "GET" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DelegatingHandlers": [ "TokenBlacklistHandler" ],
      "ClaimsToHeaders": [
        {
          "Claim": "role",
          "Header": "X-Debug-Role"
        }
      ],
      "EnableRateLimiting": true
    },
    {
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/products",
      "UpstreamHttpMethod": [ "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DelegatingHandlers": [ "TokenBlacklistHandler" ],
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "Admin"
      },
      "ClaimsToHeaders": [
        {
          "Claim": "role",
          "Header": "X-Debug-Role"
        }
      ],
      "EnableRateLimiting": true
    },
    {
      "DownstreamPathTemplate": "/api/products/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/products/{id}",
      "UpstreamHttpMethod": [ "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DelegatingHandlers": [ "TokenBlacklistHandler" ],
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "Admin"
      },
      "ClaimsToHeaders": [
        {
          "Claim": "role",
          "Header": "X-Debug-Role"
        }
      ],
      "EnableRateLimiting": true
    },
    {
      "DownstreamPathTemplate": "/api/products/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/products/{id}",
      "UpstreamHttpMethod": [ "PUT" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DelegatingHandlers": [ "TokenBlacklistHandler" ],
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "Admin"
      },
      "ClaimsToHeaders": [
        {
          "Claim": "role",
          "Header": "X-Debug-Role"
        }
      ],
      "EnableRateLimiting": true
    },
    {
      "DownstreamPathTemplate": "/api/products/crash",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/products/crash",
      "UpstreamHttpMethod": [ "GET" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DelegatingHandlers": [ "TokenBlacklistHandler" ],
      "RouteClaimsRequirement": {
        "role": "Admin"
      },
      "EnableRateLimiting": true
    },
    {
      "DownstreamPathTemplate": "/api/basket/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "basketservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/basket/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "EnableRateLimiting": true
    },
    {
      "DownstreamPathTemplate": "/api/order/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "orderservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/order/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DelegatingHandlers": [ "TokenBlacklistHandler" ],
      "EnableRateLimiting": true
    },
    {
      "DownstreamPathTemplate": "/api/order",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "orderservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/order",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DelegatingHandlers": [ "TokenBlacklistHandler" ],
      "EnableRateLimiting": true
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9000",
    "RateLimitOptions": {
      "EnableRateLimiting": true,
      "Period": "1m",
      "PeriodTimespan": 60,
      "Limit": 10,
      "HttpStatusCode": 429,
      "QuotaExceededMessage": "Too many requests. Please try again later."
    }
  }
}
